<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_mobile_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D94cbfa8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:id="@+id/splash_footer_text"
            >
            <TextView
                android:id="@+id/tv_aapkatrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aapka_data"
                android:textSize="45sp"
                android:textColor="@color/orange"
                />


            <TextView
                android:id="@+id/tv_aapkatrade_description"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="yaha par sab kucch milta hai"
                android:textColor="@color/black"
                android:layout_alignLeft="@+id/tv_aapkatrade"
                android:layout_alignRight="@+id/tv_aapkatrade"
                android:layout_below="@+id/tv_aapkatrade"
                android:textSize="@dimen/textsize_medium"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="320dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

           <RelativeLayout
               android:layout_width="250dp"
               android:layout_height="250dp"
               android:background="@drawable/dotted_circle"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               >

               <ImageView
                   android:layout_width="130dp"
                   android:layout_height="130dp"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/ic_circle_logo"
                   />


           </RelativeLayout>



                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_seller"
                    android:background="@drawable/dotted_green_circle"
                    android:padding="22dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView1"
                    />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_business"
                android:background="@drawable/dotted_green_circle"
                android:padding="22dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/imageView2"
                android:layout_marginBottom="55dp"
                android:layout_marginLeft="12dp"
                />



            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_buyer"
                android:background="@drawable/dotted_green_circle"
                android:padding="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/imageView3"
                android:layout_marginBottom="55dp"
                android:layout_marginRight="8dp"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"

android:layout_alignParentBottom="true"


            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"

app:srcCompat="@drawable/ic_splash_footer"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
