<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_associate_agreement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pat.aapkatrade.user_dashboard.associateagreement.AssociateAgreementActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activity_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepper_text"
        android:background="@color/cardview_background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />




        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical"

                >

                <android.support.v7.widget.CardView
                    android:id="@+id/step1aLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_dip"
                    android:layout_marginRight="@dimen/ten_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/twenty_dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:orientation="vertical">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageViewProfilePic"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="@dimen/ten_dip"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:src="@drawable/ic_profile_user" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/twenty_dip"
                            android:layout_marginTop="@dimen/ten_dip"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name: Gunni Jaya Sharma"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/tvDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Join Date: 2017-01-31 06:46:54"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/orange"
                                    android:layout_below="@+id/tvUserName"
                                    android:layout_marginTop="5dp"
                                    />

                                <TextView
                                    android:id="@+id/tvReferenceNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reference Number:vijayranj2"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/black"
                                    android:layout_below="@+id/tvDate"
                                    android:layout_marginTop="5dp"
                                    />


                            </RelativeLayout>



                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/step1bLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_dip"
                    android:layout_marginRight="@dimen/ten_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/twenty_dip">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="10dp"
                       >


                       <TextView
                           android:id="@+id/tvBussinessHeading"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/business_associate_heading"
                           android:textColor="@color/black"
                           android:textStyle="bold"
                           android:textSize="18sp"
                           />


                       <TextView
                           android:id="@+id/tvBussinessDetails"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/bussiness_associate_details"
                           android:textColor="@color/black"
                           android:layout_marginTop="5dp"
                           android:layout_below="@+id/tvBussinessHeading"
                           android:maxLines="3"
                           />


                       <TextView
                           android:id="@+id/tvMore"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="More..."
                           android:layout_below="@+id/tvBussinessDetails"
                           android:layout_marginTop="5dp"
                           android:textColor="@color/orange"
                           />

                   </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_dip"
                    android:layout_marginRight="@dimen/ten_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:layout_marginBottom="@dimen/ten_dip"
                    android:padding="@dimen/twenty_dip">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="4"

                                >


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_gravity="bottom"
                                    >

                                    <RelativeLayout
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        >

                                        <ImageView
                                            android:id="@+id/imGreenTraingle"
                                            android:layout_width="25dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/green_traingle"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitXY"
                                            />


                                        <View
                                            android:layout_width="25dp"
                                            android:layout_height="200dp"
                                            android:layout_centerHorizontal="true"
                                            android:background="#05DB61"
                                            android:layout_below="@+id/imGreenTraingle"
                                            ></View>


                                    </RelativeLayout>

                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"
                                    >

                                    <RelativeLayout
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        >

                                        <ImageView
                                            android:id="@+id/imYellowTraingle"
                                            android:layout_width="25dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/yellow_traingle"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitXY"
                                            />


                                        <View
                                            android:layout_width="25dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:background="#FEF200"
                                            android:layout_below="@+id/imYellowTraingle"
                                            ></View>



                                    </RelativeLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"
                                    >


                                    <RelativeLayout
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        >

                                        <ImageView
                                            android:id="@+id/imRedTraingle"
                                            android:layout_width="25dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/red_traingle"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitXY"
                                            />

                                        <View
                                            android:layout_width="25dp"
                                            android:layout_height="100dp"
                                            android:layout_centerHorizontal="true"
                                            android:background="#FA2B33"
                                            android:layout_below="@+id/imRedTraingle"
                                            ></View>



                                    </RelativeLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"
                                    >

                                    <RelativeLayout
                                        android:layout_width="25dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        >

                                        <ImageView
                                            android:id="@+id/imBlackTraingle"
                                            android:layout_width="25dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/black_traingle"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitXY"
                                            />


                                        <View
                                            android:layout_width="25dp"
                                            android:layout_height="50dp"
                                            android:layout_centerHorizontal="true"
                                            android:background="#4B4B4B"
                                            android:layout_below="@+id/imBlackTraingle"
                                            ></View>

                                    </RelativeLayout>

                                </RelativeLayout>



                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#8A8A8A"
                                ></View>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"

                                >


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"

                                    >


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:padding="10dp"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Doing Great"
                                            android:textColor="@color/black"

                                            />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentRight="true"
                                        android:background="#8A8A8A"
                                        ></View>



                                </RelativeLayout>



                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"

                                    >


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:padding="10dp"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Nedd to catch-up with the target"
                                            android:textColor="@color/black"
                                            android:layout_centerHorizontal="true"
                                            />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentRight="true"
                                        android:background="#8A8A8A"
                                        ></View>




                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"

                                    >

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:padding="10dp"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Danger Zone"
                                            android:textColor="@color/black"
                                            android:layout_centerHorizontal="true"
                                            />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentRight="true"
                                        android:background="#8A8A8A"
                                        ></View>

                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"

                                    >

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:padding="10dp"
                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Out of System"
                                            android:textColor="@color/black"
                                            android:layout_centerHorizontal="true"
                                            />

                                    </RelativeLayout>





                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </RelativeLayout>



                    </android.support.v7.widget.CardView>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>
