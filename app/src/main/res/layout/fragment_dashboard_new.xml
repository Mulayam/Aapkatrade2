<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.pat.aapkatrade.Home.DashboardFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent">


                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_custom"
                    android:layout_width="match_parent"

                    android:layout_height="150dp" />


                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/viewpagerindicator"
android:layout_marginBottom="10dp"

                        android:orientation="horizontal"
                        android:layout_height="20dp">

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="LATEST PRODUCTS"
                        android:textColor="@color/black" />



                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:background="@drawable/button_orange_back"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="View All "
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/white"
                            android:id="@+id/textView66" />
                    </RelativeLayout>

                </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@color/cardview_background"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                android:id="@+id/previous"
                android:layout_weight="0.7"
                android:background="@drawable/prev"
               android:layout_gravity="center_vertical"
                android:layout_height="30dp">

            </View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerBestSelling"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="8.6"
                android:layout_toRightOf="@+id/previous"
                >

            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:id="@+id/next"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/recyclerBestSelling"
                android:background="@drawable/next"
                android:layout_height="30dp"></View>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LATEST DEALS"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black" />



                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="right"

                        android:background="@drawable/button_orange_back"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"



                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="View All "
                            android:textSize="10sp"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:id="@+id/textView67"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_background"
                    android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerEclipseExpressCollection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW ARRIVAL"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black" />



                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="right"

                        android:background="@drawable/button_orange_back"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="View All "
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/white"
                            android:id="@+id/textView68" />
                    </RelativeLayout>
                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_background"
                    android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerTrendingStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>
                    </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOT DEALS"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black" />



                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="right"

                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_orange_back"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="View All "
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/white"
                            android:id="@+id/textView69" />
                    </RelativeLayout>
                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_background"
                    android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerAllSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:forceHasOverlappingRendering="false"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />



</android.support.design.widget.CoordinatorLayout>
