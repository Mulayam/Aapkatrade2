<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAPKA TRADE"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tvAbout_us_data1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeading"
                android:layout_marginTop="5dp"
                android:text="@string/about_us_data1"
                android:textColor="@color/black" />


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAbout_us_data1"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_green_back"
                android:padding="5dp">


                <TextView
                    android:id="@+id/tvAbout_us_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/about_us_data2"
                    android:textColor="@color/dark_green_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAbout_us_data2"
                    android:layout_centerHorizontal="true"
                    android:text="&quot;ANYBODY CAN DO THE BUSINESS&quot;"
                    android:textColor="@color/dark_green_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvBuyer_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="20dp"
                android:text="@string/about_us_data4"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBuyer_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBuyer_heading"
                android:layout_marginTop="10dp"
                android:text="@string/about_us_data5"
                android:textColor="@color/black" />


            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBuyer_data"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_green_back"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_data6"
                    android:textColor="@color/dark_green_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvAbout_us_data7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="20dp"
                android:text="@string/about_us_data7"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvAbout_us_data8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAbout_us_data7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/about_us_data8"
                android:textColor="@color/black" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAbout_us_data8"
                android:background="@drawable/edit_text_green_back"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_data9"
                    android:textColor="@color/dark_green_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>