<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="10dp"


    android:gravity="center">
    <android.support.v7.widget.CardView

        android:layout_width="wrap_content"
        android:background="@color/grey"
        android:id="@+id/cardview"
        android:layout_margin="1dp"
        android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="1dp"


            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/imageview_weight"
                android:layout_height="@dimen/imageview_height"
                android:id="@+id/img_product_image_list"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Smartphone"
                android:id="@+id/tvProductName"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="$250"
                android:textColor="@color/color_voilet"
                android:layout_height="wrap_content"
                android:id="@+id/tv_productprize" />
            <io.techery.properratingbar.ProperRatingBar
                android:id="@+id/lowerRatingBar"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                app:prb_defaultRating="3"
                app:prb_tickNormalDrawable="@drawable/ic_white_star"
                app:prb_tickSelectedDrawable="@drawable/ic_orange_star"
                app:prb_totalTicks="5"
                app:prb_clickable="false"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                app:prb_tickSpacing="0dp"
                android:layout_marginTop="2dp"
                />


        </LinearLayout>









    </android.support.v7.widget.CardView>
</RelativeLayout>