<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeAddCompanyHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.8"
        >


        <RelativeLayout
            android:id="@+id/linear_layout_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/orange_back"
            >


            <ImageView
                android:id="@+id/imgAddCompany"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_company"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/orange_back"
            android:layout_toRightOf="@+id/linear_layout_image"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_company_heading"
                android:textColor="@color/white"
                android:textStyle="bold"
                />


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/screen_back"
        android:layout_weight="9.2"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="10"
        >



        <EditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:hint="Company Name"
            android:background="@drawable/edit_text_green_back"
            android:padding="10dp"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            />


        <EditText
            android:id="@+id/etPEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Primary Email"
            android:background="@drawable/edit_text_green_back"
            android:padding="10dp"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            />


        <EditText
            android:id="@+id/etSEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Secondary Email"
            android:background="@drawable/edit_text_green_back"
            android:padding="10dp"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/spinner_green_back"
            android:padding="2dp"
            android:visibility="gone"
            >

          <Spinner
              android:id="@+id/spCategory"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignParentLeft="true"
               android:background="@drawable/simple_spinner_back"
              ></Spinner>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow"
                android:scaleType="fitXY"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/spinner_green_back"
            android:padding="2dp"
            android:visibility="gone"
            >

            <Spinner
                android:id="@+id/spSubCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/simple_spinner_back"
                ></Spinner>



            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow"
                android:scaleType="fitXY"
                />

        </RelativeLayout>


        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Address"
            android:background="@drawable/edit_text_green_back"
            android:padding="10dp"
            android:inputType="text"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/etDiscription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="Description"
            android:background="@drawable/edit_text_green_back"
            android:padding="10dp"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="15dp"
            >
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/save"
                android:textAllCaps="false"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:background="@drawable/button_orange_back"
                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
