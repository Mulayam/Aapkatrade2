<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_product_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@color/white"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="4.3"
            android:layout_gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/footweer" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.7"
            android:padding="10dp"
            android:orientation="vertical">


            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="left"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:rating="3"
                android:stepSize="1" />


            <TextView
                android:id="@+id/sub_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/product_name1"
                android:textColor="@color/orange"
                  android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/phone_number"
                android:textColor="@color/item_details_color"
                android:textSize="@dimen/textsize_medium"
                android:layout_marginTop="10dp"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvQtyHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Qty."
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="@dimen/textsize_medium" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvQtyHeading"
                    android:background="@drawable/spinner_black_border"
                    android:padding="10dp"
                    >


                    <Spinner
                        android:id="@+id/spcompanyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/simple_spinner_back"
                        android:layout_margin="1dp"
                        ></Spinner>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitXY"
                        />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:src="@drawable/location_green" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
