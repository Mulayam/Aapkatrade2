<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_forgot__password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.pat.aapkatrade.login.Forgot_Password">


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:weightSum="7"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_height="0dp">


<android.support.v7.widget.AppCompatImageView
    android:layout_width="wrap_content"
    app:srcCompat="@drawable/ic_forgot_password_icon"
android:scaleType="fitCenter"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1.5"

                    android:textSize="@dimen/textsize_large"
                 android:gravity="bottom"
                    android:text="@string/forgot_your_password"
                    android:layout_height="0dp"
                    android:id="@+id/tv_forgot_password" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_weight="1.5"
               android:typeface="normal"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/textsize_small"
                    android:text="@string/forgot_your_password_instruction1"
                    android:layout_height="0dp"
                    android:id="@+id/tv_forgot_password_description" />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_email"
                            android:layout_width="match_parent"

                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_email_forgot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColorHint="@color/green"
                                style="@style/myedittext"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:hint="@string/email" />


                        </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/or"
                    android:padding="@dimen/five_dip"
                    android:textColor="@color/white"
                    android:background="@drawable/circle_voilet"
                    android:textSize="@dimen/textsize"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView6" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_mobile_no"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/green"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    style="@style/myedittext"
                    android:hint="@string/mobile_no" />


            </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="bottom"
                android:layout_height="0dp">

                <Button
                    android:layout_width="match_parent"
                    android:background="@color/color_voilet"

                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:text="@string/send_otp"
                    android:paddingLeft="@dimen/five_dip"
                    android:paddingRight="@dimen/five_dip"
                    android:textSize="@dimen/textsize"
                    android:layout_height="@dimen/fifty_dip"
                    android:id="@+id/btn_send_otp"
                    />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
