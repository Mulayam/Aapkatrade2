<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"

    >
    <Button
        android:id="@+id/imgCLose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bt_dialog_close"
        android:text="X"
        android:textColor="@color/green"
    />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bg_dialog"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/green"






            android:layout_height="@dimen/fifty_dip">


        </RelativeLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_associate_agreement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:weightSum="15"

            tools:context="com.example.pat.aapkatrade.user_dashboard.associateagreement.AssociateAgreementDialog"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/fifty_dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">




            <LinearLayout
                android:id="@+id/activity_my_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:orientation="vertical">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"

                        >

                        <android.support.v7.widget.CardView
                            android:id="@+id/step1aLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:layout_marginTop="@dimen/ten_dip"
                            android:layout_marginLeft="@dimen/ten_dip"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">




                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageViewProfilePic"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_margin="@dimen/ten_dip"
                                    android:src="@drawable/ic_profile_user" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/twenty_dip"
                                    android:layout_marginTop="@dimen/ten_dip"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/tvUserName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:text="Name: Gunni Jaya Sharma"
                                            android:textColor="@color/black" />

                                        <TextView
                                            android:id="@+id/tvDate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvUserName"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:text="Join Date: 2017-01-31 06:46:54"
                                            android:textColor="@color/orange" />

                                        <TextView
                                            android:id="@+id/tvReferenceNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvDate"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:text="Reference Number:vijayranj2"
                                            android:textColor="@color/black" />


                                    </RelativeLayout>


                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/step1bLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:layout_marginLeft="@dimen/ten_dip"
                            android:layout_marginTop="@dimen/ten_dip"
                            android:padding="@dimen/twenty_dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <TextView
                                    android:id="@+id/tvBussinessHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/business_associate_heading"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tvBussinessDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvBussinessHeading"
                                    android:layout_marginTop="5dp"
                                    android:maxLines="3"
                                    android:text="@string/bussiness_associate_details"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/tvMore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvBussinessDetails"
                                    android:layout_marginTop="5dp"
                                    android:text="More..."
                                    android:textColor="@color/orange" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/cardViewGraph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten_dip"

                            android:layout_marginTop="@dimen/ten_dip"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:layout_marginLeft="@dimen/ten_dip"
                            android:padding="@dimen/twenty_dip">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="20dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:weightSum="4"

                                        >


                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="25dp"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true">

                                                <ImageView
                                                    android:id="@+id/imGreenTraingle"
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="@drawable/green_traingle"
                                                    android:scaleType="fitXY" />


                                                <View
                                                    android:layout_width="25dp"
                                                    android:layout_height="200dp"
                                                    android:layout_below="@+id/imGreenTraingle"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="#05DB61" />


                                            </RelativeLayout>

                                        </RelativeLayout>


                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="150dp"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1">

                                            <RelativeLayout
                                                android:layout_width="25dp"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true">

                                                <ImageView
                                                    android:id="@+id/imYellowTraingle"
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="@drawable/yellow_traingle"
                                                    android:scaleType="fitXY" />


                                                <View
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@+id/imYellowTraingle"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="#FEF200"></View>


                                            </RelativeLayout>


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1">


                                            <RelativeLayout
                                                android:layout_width="25dp"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true">

                                                <ImageView
                                                    android:id="@+id/imRedTraingle"
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="@drawable/red_traingle"
                                                    android:scaleType="fitXY" />

                                                <View
                                                    android:layout_width="25dp"
                                                    android:layout_height="100dp"
                                                    android:layout_below="@+id/imRedTraingle"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="#FA2B33"></View>


                                            </RelativeLayout>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1">

                                            <RelativeLayout
                                                android:layout_width="25dp"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true">

                                                <ImageView
                                                    android:id="@+id/imBlackTraingle"
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="@drawable/black_traingle"
                                                    android:scaleType="fitXY" />


                                                <View
                                                    android:layout_width="25dp"
                                                    android:layout_height="50dp"
                                                    android:layout_below="@+id/imBlackTraingle"
                                                    android:layout_centerHorizontal="true"
                                                    android:background="#4B4B4B"></View>

                                            </RelativeLayout>

                                        </RelativeLayout>


                                    </LinearLayout>


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="#8A8A8A"></View>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="4"

                                        >


                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1"

                                            >


                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Doing Great"
                                                    android:textColor="@color/black"

                                                    />

                                            </RelativeLayout>

                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="30dp"
                                                android:layout_alignParentRight="true"
                                                android:background="#8A8A8A"></View>


                                        </RelativeLayout>


                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1"

                                            >


                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:text="Nedd to catch-up with the target"
                                                    android:textColor="@color/black" />

                                            </RelativeLayout>

                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="30dp"
                                                android:layout_alignParentRight="true"
                                                android:background="#8A8A8A"></View>


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1"

                                            >

                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:text="Danger Zone"
                                                    android:textColor="@color/black" />

                                            </RelativeLayout>

                                            <View
                                                android:layout_width="2dp"
                                                android:layout_height="30dp"
                                                android:layout_alignParentRight="true"
                                                android:background="#8A8A8A"></View>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_weight="1"

                                            >

                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true"
                                                    android:text="Out of System"
                                                    android:textColor="@color/black" />

                                            </RelativeLayout>


                                        </RelativeLayout>


                                    </LinearLayout>


                                </LinearLayout>


                            </RelativeLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </android.support.v4.widget.NestedScrollView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/input_layout_agreement"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_marginTop="@dimen/two_dip"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/two_dip"
                android:layout_marginLeft="@dimen/two_dip"
                android:layout_marginBottom="@dimen/two_dip"
                android:background="@drawable/orange_background">

                <CheckBox
                    android:id="@+id/agreement_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:checked="false"
                    android:shadowColor="@color/white"
                    android:theme="@style/customCheckBoxStyle" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/accept_t_and_c"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>