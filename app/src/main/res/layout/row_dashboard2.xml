<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeDashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/ten_dip">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgDashboard"
            android:layout_width="@dimen/thirty_five_dip"
            android:layout_height="@dimen/thirty_five_dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="7dp"
            android:src="@drawable/ic_edit" />


        <TextView
            android:id="@+id/tvDashboard"
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_five_dip"
            android:layout_weight="3"
            android:text="Sachin Tendulkar"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_five_dip"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical"
            android:text="50"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/relativedata"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/list_strip" />


</LinearLayout>