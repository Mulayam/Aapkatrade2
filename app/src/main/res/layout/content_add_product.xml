<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentAddProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/relativeCompanyListheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/linear_layout_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/orange">


                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_adprdct" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/linear_layout_image"
                    android:background="@color/orange"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_product_heading"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dip"
                android:background="@color/cardview_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/upload_image_layout" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp" />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:padding="@dimen/five_dip">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_dip">


                            <Spinner
                                android:id="@+id/spCompanyName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="1dp"
                                android:background="@drawable/simple_spinner_back" />

                            <ImageView
                                android:layout_width="@dimen/twenty_dip"
                                android:layout_height="@dimen/twenty_dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/ten_dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_arrow" />

                        </RelativeLayout>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip">

                        <EditText
                            android:id="@+id/etProductName"
                            style="@style/myedittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/product_name2"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_dip"
                            android:theme="@style/myedittext" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:padding="@dimen/five_dip">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_dip">


                            <Spinner
                                android:id="@+id/spCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="1dp"
                                android:background="@drawable/simple_spinner_back" />

                            <ImageView
                                android:layout_width="@dimen/twenty_dip"
                                android:layout_height="@dimen/twenty_dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/ten_dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_arrow" />

                        </RelativeLayout>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:padding="@dimen/five_dip">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_dip">


                            <Spinner
                                android:id="@+id/spSubCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="1dp"
                                android:background="@drawable/simple_spinner_back" />

                            <ImageView
                                android:layout_width="@dimen/twenty_dip"
                                android:layout_height="@dimen/twenty_dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/ten_dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_arrow" />

                        </RelativeLayout>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:padding="@dimen/five_dip">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_dip">


                            <Spinner
                                android:id="@+id/spState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="1dp"
                                android:background="@drawable/simple_spinner_back" />

                            <ImageView
                                android:layout_width="@dimen/twenty_dip"
                                android:layout_height="@dimen/twenty_dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/ten_dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_arrow" />

                        </RelativeLayout>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:padding="@dimen/five_dip">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_dip">


                            <Spinner
                                android:id="@+id/spCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="1dp"
                                android:background="@drawable/simple_spinner_back" />

                            <ImageView
                                android:layout_width="@dimen/twenty_dip"
                                android:layout_height="@dimen/twenty_dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/ten_dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_arrow" />

                        </RelativeLayout>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_delivery_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip">

                        <EditText
                            android:id="@+id/etDeliverLocation"
                            style="@style/myedittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/delivery_location"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_dip"
                            android:theme="@style/myedittext" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:padding="@dimen/five_dip">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_dip">


                            <Spinner
                                android:id="@+id/spDeliverydistance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="1dp"
                                android:background="@drawable/simple_spinner_back" />

                            <ImageView
                                android:layout_width="@dimen/twenty_dip"
                                android:layout_height="@dimen/twenty_dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/ten_dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_arrow" />

                        </RelativeLayout>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip">

                        <EditText
                            android:id="@+id/etPrice"
                            style="@style/myedittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/price"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_dip"
                            android:theme="@style/myedittext" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_crossed_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip">

                        <EditText
                            android:id="@+id/etCrossedPrice"
                            style="@style/myedittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/cross_price"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_dip"
                            android:theme="@style/myedittext" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty_dip"
                        android:layout_marginRight="@dimen/twenty_dip"
                        android:layout_marginTop="@dimen/ten_dip">

                        <EditText
                            android:id="@+id/etDescription"
                            style="@style/myedittext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/description_heading"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_dip"
                            android:theme="@style/myedittext" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
