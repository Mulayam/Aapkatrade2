<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pat.aapkatrade.contact_us.ContactUsFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="false"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_etSubject"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/input_layout_busi_type"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/hint_color"
                    >

                    <EditText
                        android:id="@+id/etSubject"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dip"
                        android:hint="Subject"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:paddingLeft="8dp"
                        android:layout_below="@+id/relativeQuestion"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        style="@style/myedittext"
                        />


                </android.support.design.widget.TextInputLayout>



             <android.support.design.widget.TextInputLayout
                 android:id="@+id/input_layout_UserName"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/input_layout_etSubject"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginTop="8dp"
                 android:textColorHint="@color/hint_color"
                 >

                 <EditText
                     android:id="@+id/etUserName"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/fifty_dip"
                     android:hint="User Name"
                     android:maxLines="1"
                     android:paddingLeft="8dp"
                     android:imeOptions="actionNext"
                     android:layout_below="@+id/input_layout_etSubject"
                     android:textColorHint="@color/green"
                     android:textSize="@dimen/textsize"
                     android:theme="@style/myedittext"
                     style="@style/myedittext"
                     />


             </android.support.design.widget.TextInputLayout>




                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_MobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_UserName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="8dp"
                    android:textColorHint="@color/hint_color"
                    >

                    <EditText
                        android:id="@+id/etMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_dip"
                        android:hint="Mobile Number"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:paddingLeft="8dp"
                        android:layout_below="@+id/etUserName"
                        android:textColorHint="@color/green"
                        android:textSize="@dimen/textsize"
                        android:theme="@style/myedittext"
                        style="@style/myedittext"
                        android:inputType="number"
                        android:maxLength="10"
                        />



                </android.support.design.widget.TextInputLayout>


               <android.support.design.widget.TextInputLayout
                   android:id="@+id/input_layout_Email"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/input_layout_MobileNo"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="8dp"
                   android:textColorHint="@color/hint_color"
                   >


                   <EditText
                       android:id="@+id/etEmail"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/fifty_dip"
                       android:hint="Email"
                       android:maxLines="1"
                       android:imeOptions="actionNext"
                       android:paddingLeft="8dp"
                       android:layout_below="@+id/etMobileNo"
                       android:textColorHint="@color/green"
                       android:textSize="@dimen/textsize"
                       android:inputType="textEmailAddress"
                       android:theme="@style/myedittext"
                       style="@style/myedittext"
                       />


               </android.support.design.widget.TextInputLayout>




               <android.support.design.widget.TextInputLayout
                   android:id="@+id/input_layout_query"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/input_layout_Email"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="8dp"
                   android:textColorHint="@color/hint_color"
                   >

                   <EditText
                       android:id="@+id/etQuery"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Query"
                       android:imeOptions="actionDone"
                       android:paddingLeft="8dp"
                       android:textColorHint="@color/green"
                       android:textSize="@dimen/textsize"
                       android:theme="@style/myedittext"
                       style="@style/myedittext"
                       />



               </android.support.design.widget.TextInputLayout>




                <Button
                    android:id="@+id/buttonSave"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty_dip"
                    android:layout_centerHorizontal="true"
                    android:text="Submit"
                    android:background="@drawable/orange_back"
                    android:textColor="@color/white"
                    android:layout_below="@+id/input_layout_query"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />


            </RelativeLayout>



        </ScrollView>




    </android.support.v7.widget.CardView>






</RelativeLayout>
