<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/green"
    android:orientation="vertical">
<View
    android:layout_width="match_parent"
    android:background="@color/orange"
    android:layout_height="2dp">

</View>


    <RelativeLayout
        android:layout_width="wrap_content"
    android:padding="10dp"
        android:background="@color/dark_green"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView

            android:id="@+id/circular_profile_image_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/svg"

            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"




            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/circular_profile_image_home"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/welcome_guest"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="@string/welcomeguest"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/welcome_guest"
            android:text="@string/user_name"
            android:id="@+id/tv_email" />


    </RelativeLayout>

    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:groupIndicator="@null" />
    <View
        android:id="@+id/snakBar1"
        android:layout_width="match_parent"
        android:background="@color/orange"
        android:layout_height="2dp">
    </View>
</LinearLayout>
