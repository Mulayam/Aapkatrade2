<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

android:id="@+id/navigation_parent_scrollview">




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange">

    </View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@drawable/navigation_profile_bg"
        android:layout_gravity="center_vertical"

        android:layout_height="wrap_content">



        <android.support.v7.widget.AppCompatImageView

            android:id="@+id/circular_profile_image_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_profile_user"

            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"

            />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/circular_profile_image_home"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/welcome_guest"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/welcomeguest"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/welcome_guest"
            android:text="@string/user_name"
            android:textStyle="bold"
            android:id="@+id/tv_email" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_email"
            android:text="demo@gmail.com"
            android:textStyle="bold"
            android:id="@+id/tv_email2" />

    </RelativeLayout>


    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_category"

        android:background="@color/blue_gradient"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Categories"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:text="Categories"
            android:textSize="14sp"
            android:src="@drawable/ic_chevron_grey"
           android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginRight="26dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/footer_categories"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_green"></View>
    </RelativeLayout>





    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_below="@+id/rl_category"
        android:layout_width="match_parent"
        android:layout_height="1000dp"

        android:background="@color/white"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:groupIndicator="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_terms"

        android:background="@color/blue_gradient"
        android:layout_below="@+id/lvExp"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/terms"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content" />


        <View
            android:id="@+id/footer_categorie2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_gradient_dark"></View>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_invite"
        android:background="@color/blue_gradient"

        android:layout_below="@+id/rl_terms"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/invite"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/footer_categorie3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_gradient_dark"></View>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_setting"

        android:background="@color/blue_gradient"
        android:layout_below="@+id/rl_invite"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/logout"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/footer_categorie4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_gradient_dark"></View>
    </RelativeLayout>


    </RelativeLayout>






    <View
        android:id="@+id/snakBar1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange"></View>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
