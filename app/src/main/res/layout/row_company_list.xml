<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <RelativeLayout
            android:id="@+id/relativecompanyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/tvCompanyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24jun2017"
                android:layout_below="@+id/tvCompanyname"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/green"
                android:layout_toLeftOf="@+id/imgNext"
                />


            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/tvCompanyname"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/imgEmail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/tvDate"
                android:src="@drawable/email_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:text="Info@aapkatrade.com"
                android:layout_toRightOf="@+id/imgEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />



            <View
                android:id="@+id/View1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvEmail"
                android:background="@color/black"
                 android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                ></View>



            <LinearLayout
                android:id="@+id/linearLayoutDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_below="@+id/View1"
                android:layout_margin="10dp"
                >


              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="6"
                  android:orientation="vertical"
                  >

                  
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      >

                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/email_icon"
                          />


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="B-57 Pocket-1 Block-D Rohini New Delhi"
                          android:layout_marginLeft="10dp"
                          />
                      
                      
                  </LinearLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      >

                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/email_icon"
                          />


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="A dining table with two Chairs. Furniture refers to moveble objects intended to support...."
                          android:layout_marginLeft="10dp"
                          />



                  </LinearLayout>


              </LinearLayout>
                


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            />


                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutDetail"
                android:layout_marginTop="10dp"
                 android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                >


               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:background="@drawable/row_company_white_black_border"
                   android:weightSum="1"
                   android:orientation="horizontal"
                   >


                   <ImageView
                       android:id="@+id/imgEdtCompanyName"
                       android:layout_width="0dp"
                       android:layout_height="25dp"
                       android:layout_weight="0.4"
                       android:src="@drawable/ic_edit"
                       />

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:text="Edit"
                       android:layout_weight="0.6"
                       android:layout_gravity="center_vertical"
                       android:layout_toRightOf="@+id/imgEdtCompanyName"
                       android:textColor="@color/black"

                       />

               </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_company_white_black_border"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/imgDeleteCompany"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_delete"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/imgDeleteCompany"
                        android:textColor="@color/black"

                        />

                </LinearLayout>




            </LinearLayout>



        </RelativeLayout>


    </android.support.v7.widget.CardView>

